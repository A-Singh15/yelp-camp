<% include ../partials/header %>
<div class="row">
  <h1 style="text-align: center;">Edit Comment</h1>
  <div class="rwd-form">
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="comment[text]">Comment</label>
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" autocomplete="off" />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Submit!</button>
      </div>
    </form>
    
    <a href="/campgrounds/<%= campground_id %>">Back</a>
  </div>
</div>
<% include ../partials/footer %>